<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<Tab xmlns="http://javafx.com/javafx/17" fx:id="tabReports" text="Reports" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportController">
    <VBox spacing="10.0" fx:id="vbox">
        <children>
            <HBox spacing="10.0">
                <ComboBox fx:id="comboReport" onAction="#onActionComboReport" prefWidth="150.0" />
                <Button text="Refresh" onAction="#onActionRefreshReport"></Button>
            </HBox>

            <VBox fx:id="reportContent"></VBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </VBox>
</Tab>